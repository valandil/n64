prefix                        = @prefix@
exec_prefix                   = @exec_prefix@
bindir                        = @bindir@
srcdir                        = @srcdir@
CC                            = @CC@
CPPFLAGS                      = -I.. -I$(srcdir)/.. -I$(srcdir)/../../include @CPPFLAGS@
CFLAGS                        = -std=gnu11 -Wall @CFLAGS@
LDFLAGS                       = -Wl,-rpath,\$$ORIGIN/../lib @LDFLAGS@
LDLIBS                        = -ljansson @LIBM@
SRC                           = $(srcdir)/*.c
PROGNAME                      = grc
INSTALL                       = @INSTALL@
MKDIR_P                       = @MKDIR_P@

.PHONY                        : all install install-strip clean distclean

all                           : $(PROGNAME)
install                       : | $(DESTDIR)$(bindir)
	$(INSTALL) -p $(PROGNAME) $(DESTDIR)$(bindir)
install-strip                 :
	$(MAKE) INSTALL="$(INSTALL) -s" DESTDIR=$(DESTDIR) install
clean                         :
	rm -f $(DESTDIR)$(PROGNAME)
distclean                     :
	rm -f makefile
$(PROGNAME)                   : $(SRC)
	$(CC) $(CPPFLAGS) $(CFLAGS) $(LDFLAGS) $^ $(LDLIBS) -o $@
$(DESTDIR)/$(bindir)                     :
	$(MKDIR_P) $(DESTDIR)/$(bindir)
